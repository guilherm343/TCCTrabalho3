@model TCCTrabalho3.Models.CursosModel

@{
    ViewData["Title"] = "Adicionar Curso";
}

<h1>Adicionar Novo Curso</h1>

<form asp-action="AdicionarCurso" method="post">
    <div class="form-group">
        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Descricao" class="control-label"></label>
        <textarea asp-for="Descricao" class="form-control"></textarea>
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Preco" class="control-label"></label>
        <input asp-for="Preco" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Preco" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Estoque" class="control-label"></label>
        <input asp-for="Estoque" class="form-control" type="number" />
        <span asp-validation-for="Estoque" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Adicionar Curso</button>
</form>

<a class="btn btn-secondary mt-3" href="@Url.Action("Index", "Cursos")">Voltar para a Lista de Cursos</a>
